@model IEnumerable<Wagon>

<h1>Wagons</h1>
@if(Model.Count() == 0){
    <p>No Wagons</p>
}
else{
    foreach(Wagon wagon in Model)
    {
        <p><a href="/wagons/@wagon.Id">@wagon.Name</a></p>
        <p>@wagon.PassengerCount() Passengers with an average age of @wagon.AvgAge()</p>
        <br />
    }
}